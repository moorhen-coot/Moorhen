{
    "$schema": "http://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "outDir": "tsDist",
        "module": "es6",
        "target": "es6",
        "rootDir": "./",
        "types": ["node", "./src/types"],
        "lib": ["ESNext.Array", "esnext", "es6", "dom", "dom.Iterable", "es2017", "WebWorker"],
        "skipLibCheck": true,
        "esModuleInterop": true,
        "jsx": "react-jsx",
        "sourceMap": true,
        "declarationMap": true,
        "moduleResolution": "node",
        "declaration": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src/*"],
    "exclude": [
        "node_modules/*",
        "tsDist/*",
        "dist/*",
        "nginx/*",
        "test/*",
        "src/__tests__/*",
        "webpack.config.js",
        "src/protobuf/MoorhenSession.js"
    ]
}
