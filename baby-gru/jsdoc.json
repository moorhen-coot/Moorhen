{
    "tags": {
      "allowUnknownTags": true,
      "dictionaries": ["jsdoc", "closure"]
    },
    "source": {
      "include": ["./src"],
      "excludePattern": "(src/__tests__/|src/WebGLgComponents/)",
      "includePattern": ".(jsx|js|ts|tsx)$"
    },
    "plugins": [
        "node_modules/better-docs/typescript",
        "node_modules/better-docs/component",
        "node_modules/better-docs/category"
    ],
    "typescript": {
        "moduleRoot": "./src"
    },
    "templates": {
      "search": true,
      "default": {
        "staticFiles": {
          "include": [
            "./docs.styles.css",
            "./public/pixmaps/MoorhenLogo.png"
          ]
        }
      },
      "better-docs": {
            "name": "Moorhen Developer Documentation",
            "logo": "./MoorhenLogo.png",
            "css": "docs.styles.css",
            "navLinks": [
              {
                  "label": "Github",
                  "href": "https://github.com/moorhen-coot/Moorhen"
              },
              {
                  "label": "Moorhen Wiki",
                  "href": "https://moorhen-coot.github.io/wiki/"
              }
            ]
          }
    },
    "opts": {
        "template": "node_modules/better-docs",
        "destination": "docs",
        "recurse": true,
        "verbose": true,
        "readme": "../README.md"
    },
    "sourceType": "module"
  }